  "analysis_workflow": {
    "step_1_contract_upload": {
      "action": "User uploads contract in PDF, DOCX, or TXT format",
      "validation": "File type verification, size limits (max 50 MB), encoding detection"
    },
    "step_2_document_processing": {
      "action": "Contract parsed into sections and sentences",
      "output": "Structured document representation with metadata"
    },
    "step_3_clause_detection": {
      "action": "Machine learning model identifies 41 predefined clause types",
      "matching": "Pattern matching + semantic similarity against training corpus",
      "output": "List of identified clauses with confidence scores"
    },
    "step_4_jurisdiction_detection": {
      "action": "Determines applicable legal jurisdiction(s)",
      "method": "Governing law clause analysis + explicit user specification",
      "output": "Identified jurisdiction with confidence score"
    },
    "step_5_legal_corpus_search": {
      "action": "Queries Chroma database for relevant legal precedents",
      "query_filters": ["jurisdiction", "legal_vertical", "clause_type"],
      "retrieval": "Returns top 5-10 most relevant legal documents"
    },
    "step_6_five_dimension_risk_assessment": {
      "action": "Scores contract across 5 dimensions",
      "dimensions": ["IP Risk", "Termination Fairness", "Liability", "Restrictive Covenants", "Commercial Terms"],
      "scoring": "0-100 per dimension, with detailed explanation of each point",
      "output": "Risk profile with color-coded severity indicators"
    },
    "step_7_clause_extraction": {
      "action": "Extracts problematic clauses with context",
      "analysis": "Identifies overreach, unfairness, or unusual terms",
      "output": "Structured table with clause type, risk level, and location"
    },
    "step_8_citation_generation": {
      "action": "Links identified risks to specific legal documents",
      "references": "IF.TTT citations pointing to relevant statutes and case law",
      "output": "Citation list with full provenance chains"
    },
    "step_9_report_generation": {
      "action": "Compiles findings into human-readable format",
      "outputs": [
        "Executive summary (1-2 pages)",
        "Clause extraction tables (CSV/markdown)",
        "Risk heatmaps (visual)",
        "Negotiation playbooks (jurisdiction-specific)",
        "Citation references (with links)"
      ]
    },
    "step_10_negotiation_support": {
      "action": "Provides fair alternative language and negotiation tactics",
      "source": "IF.Legal Corpus precedents and jurisdiction-specific best practices",
      "output": "Suggested revisions with supporting legal reasoning"
    }
  },

  "rating_dimensions": [
    {
      "dimension_name": "Intellectual Property Risk",
      "dimension_id": "ip_risk",
      "scoring_range": "0-100",
      "assessment_criteria": [
        {
          "criterion": "Scope of Assignment",
          "description": "Does contract assign all work product or only work-related products?",
          "risk_indicators": ["Total assignment of all ideas/concepts", "No limitation to business scope", "Includes personal projects", "Covers derivative works"]
        },
        {
          "criterion": "Moral Rights",
          "description": "Are moral rights waived unconditionally?",
          "risk_indicators": ["Unconditional worldwide waiver", "No attribution required", "Derivative works rights", "Credit removal allowed"]
        },
        {
          "criterion": "AI Training Rights",
          "description": "Can contractor's work be used for AI training without consent?",
          "risk_indicators": ["Explicit AI training rights", "No opt-out mechanism", "Covers personal likeness", "Includes voice/image"]
        },
        {
          "criterion": "License Restrictions",
          "description": "Are there restrictions on what contractor can license/sell?",
          "risk_indicators": ["Exclusive assignment period", "Extends beyond contract term", "Covers future work", "No reversion clause"]
        }
      ],
      "green_zone": "0-25 (Balanced—work-for-hire limited to business deliverables)",
      "yellow_zone": "26-50 (Caution—assignment scope broader than typical or moral rights issues)",
      "red_zone": "51-100 (Danger—total assignment, AI rights, or unconditional waivers)"
    },
    {
      "dimension_name": "Termination Fairness",
      "dimension_id": "termination_fairness",
      "scoring_range": "0-100",
      "assessment_criteria": [
        {
          "criterion": "Notice Period Symmetry",
          "description": "Are both parties subject to similar notice periods?",
          "risk_indicators": ["Company: immediate termination", "Contractor: 3-6 month notice", "No notice for cause", "Asymmetric grounds"]
        },
        {
          "criterion": "Grounds for Termination",
          "description": "What circumstances allow termination without cause?",
          "risk_indicators": ["Termination for convenience (company only)", "Vague cause definitions", "No specification of breaches", "Unilateral termination"]
        },
        {
          "criterion": "Compensation in Lieu",
          "description": "Is payment provided for unused notice period?",
          "risk_indicators": ["No compensation for notice period", "Forfeiture of accrued payments", "No severance/notice pay", "Prorated payment"]
        },
        {
          "criterion": "Survival of Obligations",
          "description": "Do restrictive covenants survive termination?",
          "risk_indicators": ["Indefinite non-compete", "Survival period longer than typical", "No wind-down period", "Covers post-termination work"]
        }
      ],
      "green_zone": "0-25 (Fair—symmetric notice, grounds specified, compensation provided)",
      "yellow_zone": "26-50 (Caution—modest asymmetry or vague termination grounds)",
      "red_zone": "51-100 (Unfair—immediate termination for company, long notice for contractor, no compensation)"
    },
    {
      "dimension_name": "Liability & Indemnity",
      "dimension_id": "liability_indemnity",
      "scoring_range": "0-100",
      "assessment_criteria": [
        {
          "criterion": "Indemnity Scope",
          "description": "What must contractor indemnify the company for?",
          "risk_indicators": ["Indemnify all company losses", "Including company negligence", "Covers third-party claims", "No limitation to contractor fault"]
        },
        {
          "criterion": "Liability Cap",
          "description": "Is there a cap on contractor liability?",
          "risk_indicators": ["No liability cap", "Uncapped indemnity", "Exceeds contract value", "Unlimited exposure"]
        },
        {
          "criterion": "Insurance Requirements",
          "description": "Is contractor required to maintain insurance?",
          "risk_indicators": ["Professional liability insurance", "Very high limits ($2M+)", "Company named as beneficiary", "Contractor bears cost"]
        },
        {
          "criterion": "Force Majeure",
          "description": "Are non-performance excused during unforeseen events?",
          "risk_indicators": ["Force majeure clause missing", "Limited to natural disasters only", "No excuse for pandemic/government action", "Contractor still liable"]
        }
      ],
      "green_zone": "0-25 (Balanced—indemnity limited to contractor breach, capped liability, force majeure included)",
      "yellow_zone": "26-50 (Caution—broad indemnity or high insurance requirements)",
      "red_zone": "51-100 (Excessive—unlimited indemnity, no caps, or contractor bears all company losses)"
    },
    {
      "dimension_name": "Restrictive Covenants",
      "dimension_id": "restrictive_covenants",
      "scoring_range": "0-100",
      "assessment_criteria": [
        {
          "criterion": "Non-Compete Scope",
          "description": "What is the geographic and temporal scope of non-compete restrictions?",
          "risk_indicators": ["Worldwide scope", "12+ month duration", "No geographic limit", "Covers entire industry"]
        },
        {
          "criterion": "Non-Solicitation",
          "description": "Can contractor work with clients or hire employees after contract ends?",
          "risk_indicators": ["3-5 year non-solicitation", "Covers all contacts", "No definition of client", "Includes employee recruitment"]
        },
        {
          "criterion": "Client List Protection",
          "description": "Are there restrictions on accessing client lists or relationships?",
          "risk_indicators": ["Indefinite restriction", "Covers all contacts (not just confidential)", "No geographic/temporal limit", "Prevents referral work"]
        },
        {
          "criterion": "Reasonableness Test",
          "description": "Are restrictions proportionate to legitimate business interests?",
          "risk_indicators": ["No legitimate business reason stated", "Overly broad for the work", "Extends beyond company operations", "Industry-wide prohibition"]
        }
      ],
      "green_zone": "0-25 (Reasonable—6-month non-compete, limited geographic scope, tied to business necessity)",
      "yellow_zone": "26-50 (Moderate—12-month restrictions with some reasonableness)",
      "red_zone": "51-100 (Excessive—24+ month worldwide non-compete, indefinite non-solicitation)"
    },
    {
      "dimension_name": "Commercial Terms & Payment",
      "dimension_id": "commercial_terms",
      "scoring_range": "0-100",
      "assessment_criteria": [
        {
          "criterion": "Payment Terms",
          "description": "When and how is the contractor paid?",
          "risk_indicators": ["Payment > 30 days late", "Retainage (holding back portion)", "Net 60-90 terms", "No clear payment schedule"]
        },
        {
          "criterion": "Deduction Rights",
          "description": "Can the company unilaterally deduct from compensation?",
          "risk_indicators": ["Unilateral deduction right", "For errors/rework without limit", "For third-party claims", "No approval needed"]
        },
        {
          "criterion": "Currency & Tax Risk",
          "description": "Who bears currency fluctuation and tax liability risks?",
          "risk_indicators": ["Contractor bears all currency risk", "Contractor liable for all taxes", "No clarification of tax classification", "Company shifts risk"]
        },
        {
          "criterion": "Expenses & Reimbursement",
          "description": "Are business expenses reimbursed or must contractor absorb them?",
          "risk_indicators": ["No expense reimbursement", "Pre-approval required (onerous)", "Contractor responsible for overhead", "No clear allocation"]
        },
        {
          "criterion": "Rate Changes",
          "description": "Can rates be changed unilaterally?",
          "risk_indicators": ["Company can reduce rate at-will", "No notice required", "Retroactive reductions", "Tied to undefined metrics"]
        }
      ],
      "green_zone": "0-25 (Fair—payment within 30 days, no unilateral deductions, clear tax/expense allocation)",
      "yellow_zone": "26-50 (Caution—longer payment terms or limited deduction rights)",
      "red_zone": "51-100 (Unfavorable—60+ day payment, unilateral deductions, contractor absorbs all risk)"
    }
  ],

