{
  "app_name": "IF.Contract",
  "app_aliases": ["ContractGuard"],
  "tagline": "Multi-jurisdiction legal contract analysis and risk assessment platform with IF.TTT traceability",
  "version": "1.0",
  "status": "Production-Ready for MVP Deployment",
  "release_date": "2025-11-28",

  "core_purpose": "Automated contract analysis system that detects problematic clauses, identifies legal risks, and provides jurisdiction-specific guidance across 9 jurisdictions and 12+ legal verticals using a 241-document legal corpus with IF.TTT citation provenance",

  "app_tagline_extended": "IF.Contract empowers freelancers, small businesses, and legal professionals to analyze contracts intelligently—detecting unfair terms, understanding jurisdictional implications, and accessing authoritative legal references—all backed by a curated corpus of 290+ official legal documents with complete IF.TTT traceability.",

  "key_features": [
    {
      "feature": "Automated Clause Detection",
      "description": "Identifies and extracts 41+ predefined clause categories (IP ownership, non-competes, liability caps, termination rights, etc.) from uploaded contracts",
      "capability": "Processes real-world and synthetic contracts to classify contractual obligations"
    },
    {
      "feature": "Five-Dimension Risk Rating System",
      "description": "Evaluates contracts across five critical dimensions to produce comprehensive risk assessment",
      "dimensions": [
        {
          "dimension": "Intellectual Property Risk",
          "assessment": "Evaluates IP assignment scope, moral rights waivers, AI training rights, and work product ownership",
          "scoring": "0-100 (0=balanced, 100=extreme overreach)"
        },
        {
          "dimension": "Termination Fairness",
          "assessment": "Analyzes termination asymmetry, notice periods, grounds for termination, and compensation-in-lieu provisions",
          "scoring": "0-100 (0=balanced, 100=highly unfair)"
        },
        {
          "dimension": "Liability & Indemnity",
          "assessment": "Examines liability caps, indemnification obligations, force majeure clauses, and insurance requirements",
          "scoring": "0-100 (0=balanced, 100=excessive exposure)"
        },
        {
          "dimension": "Restrictive Covenants",
          "assessment": "Evaluates non-competes, non-solicitation clauses, confidentiality scope, and geographic/temporal limits",
          "scoring": "0-100 (0=reasonable, 100=excessive restrictions)"
        },
        {
          "dimension": "Commercial Terms & Payment",
          "assessment": "Analyzes payment terms, fee structures, payment delays, deduction rights, and currency/tax risk allocation",
          "scoring": "0-100 (0=favorable, 100=unfavorable)"
        }
      ]
    },
    {
      "feature": "Multi-Jurisdiction Analysis",
      "description": "Applies jurisdiction-specific legal frameworks and statutes to contract analysis",
      "jurisdictions": ["US Federal", "UK", "Spain", "Canada", "France", "Germany", "Australia", "EU", "Quebec"]
    },
    {
      "feature": "Legal Vertical Coverage",
      "description": "Specialized analysis modules for 12+ legal domains",
      "verticals": [
        "Employment Law",
        "Intellectual Property",
        "Housing & Residential Tenancy",
        "Insurance",
        "Construction Law",
        "Tax Law",
        "Privacy & Data Protection",
        "Property & Real Estate",
        "General Commercial Contracts",
        "Criminal Law Implications",
        "Cryptocurrency & Digital Assets",
        "Professional Services"
      ]
    },
    {
      "feature": "Executive Summary Generation",
      "description": "Produces human-readable analysis reports highlighting key risks and recommended actions",
      "output": "1-2 page summaries with critical findings and priority warnings"
    },
    {
      "feature": "Clause Extraction Tables",
      "description": "Exports identified clauses in structured table format for easy reference and negotiation",
      "output": "CSV/markdown tables with clause type, text, risk level, and location"
    },
    {
      "feature": "Risk Heatmaps",
      "description": "Visual representation of risk distribution across contract dimensions and sections",
      "visualization": "Color-coded heatmaps (green=safe, yellow=caution, red=dangerous)"
    },
    {
      "feature": "Negotiation Playbooks",
      "description": "Jurisdiction-specific guidance on fair alternative language and negotiation strategies",
      "content": "Sample clauses, negotiation tactics, and legal precedents from IF.Legal Corpus"
    },
    {
      "feature": "Comparative Analysis",
      "description": "Side-by-side comparison of multiple contracts with difference highlighting",
      "capability": "Identify variations, inconsistencies, and negotiation opportunities"
    },
    {
      "feature": "IF.TTT Citation Linking",
      "description": "Every analysis references specific legal documents with complete citation provenance",
      "framework": "IF.TTT (Traceable, Transparent, Trustworthy) with SHA-256 verification and git tracking"
    },
    {
      "feature": "Bilingual Support",
      "description": "Full French/English contract analysis for Quebec and multilingual jurisdictions",
      "languages": ["English", "French", "Spanish", "German"]
    },
    {
      "feature": "Industry-Specific Templates",
      "description": "Pre-configured analysis profiles for common contract types by industry",
      "industries": ["Software Development", "Consulting", "Creative Services", "Sales", "Finance", "Manufacturing"]
    }
  ],

  "technical_stack": {
    "vector_database": {
      "system": "ChromaDB",
      "type": "Self-hosted vector database",
      "collection": "if_legal_corpus",
      "backend": "SQLite persistent storage",
      "location": "/home/setup/if-legal-corpus/indexes/chromadb/"
    },
    "embedding_model": {
      "default": "sentence-transformers/all-MiniLM-L6-v2",
      "alternative": "nlpaueb/legal-bert-base-uncased",
      "dimensions": "384 (MiniLM) or 768 (legal-bert)"
    },
    "chunking_strategy": {
      "method": "Hierarchical chunking",
      "chunk_size": "1500 characters",
      "overlap": "200 characters",
      "metadata": "11 fields per vector (document_name, jurisdiction, legal_vertical, citation_id, sha256, url, priority, local_path, citation_status, authoritative_source_url, verification_method)"
    },
    "legal_framework": {
      "citation_system": "IF.TTT (Traceable, Transparent, Trustworthy)",
      "citation_schema": "if://citation/[uuid]",
      "provenance_tracking": "Complete chain from official source → download → validation → ingestion",
      "verification": "SHA-256 document hashing + git commit references"
    },
    "runtime_languages": ["Python", "JavaScript/Node.js"],
    "deployment": ["CLI (Claude Code)", "Web API", "SaaS platform"],
    "storage": "Self-hosted (legal corpus not cloud-hosted for privacy)"
  },

